package com.prcatice;

public class StarPattern {

	public static void main(String[] args) {

		int i, j, r;

		for (i = 1; i <= 4; i++) {

			for (r = 4 - i; r >= 0; r--) {
				System.out.print(" ");
			}

			for (j = 1; j <= i; j++) {
				System.out.print("*");
			}
			for (r = 4 - i; r >=i; r--) {
				System.out.print(" ");
			}
			System.out.println();

		}
	}
}